
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="login-nav p-2 d-flex flex-row justify-content-between">
      <%= link_to  new_registration_path(resource_name) do %>
        <i class="fa-sharp fa-solid fa-arrow-left top-link"></i>
      <% end %>
      <h2>Sign In</h2>
      <div class="actions">
        <%= f.submit "Log In", class: "btn-n" %>
      </div>
     </div>
<div class="login-paage container-fluid">
    <div class="field mt-2 form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
    </div>
    <br/>
    <div class="field form-group">
      <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

  <% end %>
  <div class="bottom-links d-flex flex-column">
    <%= render "devise/shared/links" %>
  </div>
</div>