
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="login-nav p-2 d-flex flex-row justify-content-between">
<%= link_to home_index_path(resource_name) do %>
   <i class="fa-sharp fa-solid fa-arrow-left top-link"></i>
<% end %>
   <h2>REGISTER</h2>
   <div class="actions">
     <%= f.submit "Sign Up", class: "btn-n" %>
   </div>
  </div>
<div class="login-paage container-fluid">
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Your Name" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "form-control" %>
  </div>
<% end %>
<br/>
<div class="bottom-links d-flex flex-column">
  <%= render "devise/shared/links" %>
</div>
</div>