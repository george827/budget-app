<div class="add-cat-nav">
 <%= link_to  groups_path, class: "link-add-cat ps-2" do %>
    <i class="fa-sharp fa-solid fa-arrow-left top-link"></i>
  <% end %>
  <h3 class="nav-add-cat">ADD CATEGORY</h3>
</div>

<%= form_with model: @group, url: groups_path, class: "new-category container-fluid" do |form| %>
  <div>
    <% if @group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
        <% @group.errors.each do |error| %>
