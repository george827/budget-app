  <% end %>
  <div class="form-field">
  <br/>
    <%= form.text_field :name, placeholder: "Category name", class: "form-control"%>
  </div>
  <br/>
  <div class="form-field">
    <%= form.text_field :icon, placeholder: "Link for icon", class: "form-control" %>
  </div>
  </div>
  <br/>

  <div class="d-flex justify-content-center btn-p btn-b mb-5">
    <%= form.submit "Save", class: "btn-prima ps-5 pe-5" %>
  </div>

<% end %>
